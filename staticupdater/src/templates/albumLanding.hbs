<!doctype html>
<html lang="en">

{{>head title='Album' staticResLevel=".."}}

<body>
  <div class="container">
    {{>topNav}}
  </div>
  <main role="main" class="container">
    <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        {{#each albumList}}
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{photoUrl}}" class="bd-placeholder-img card-img-top" width="100%" height="225" role="img" focusable="false" />
            <div class="card-body">
              <p class="card-text">{{albumName}} by {{userName}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{url}}" class="btn btn-sm btn-outline-secondary" role="button">View</a>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">9 Likes</small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  </main><!-- /.container -->

  {{>footer}}
</body>

</html>