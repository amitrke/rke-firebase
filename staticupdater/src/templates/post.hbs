<!doctype html>
<html lang="en">

{{>head title=post.title staticResLevel=".."}}

<body>
  <div class="container">
    {{>topNav}}
  </div>
  <main role="main" class="container">
    <div class="row">
      <div class="col-md-8 blog-main">

        <div class="blog-post">
          <h2 class="blog-post-title">{{post.title}}</h2>
          <p class="blog-post-meta">{{post.displayDate}} by <a href="#">{{post.userName}}</a></p>
          <img src="{{post.id}}.jpg" style="max-width:500px"/>
          <p>{{{post.body}}}</p>
        </div><!-- /.blog-post -->

      </div><!-- /.blog-main -->

      {{>sidebar}}

    </div><!-- /.row -->

  </main><!-- /.container -->

  {{>footer}}
</body>

</html>